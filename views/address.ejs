
<h3 class="text-center">Type Address Here:</h3>
<form action="/searchForAddress" method="POST">
    <div class="ui fluid icon input mt-4 ">
        <input type="text" name="address" placeholder="Type in the Address to check it's Statistics"  onkeypress=CheckSpace(event) required>
        <i class="search icon"></i>
    </div>
</form>

<% if(typeof info !== 'undefined' ){ %>
    <% if(typeof info.error !== 'undefined'){ %>
    <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
        <strong>  <%= info.error %> </strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } else { %>
    <div class="card mt-4" style="width: 70rem;">
        <div class="card-header text-center">
        Address: <span class="text-success"><%= info.address %></span>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"> Final Balance : <span class="text-success"><%= info.final_balance %> BTC</span></li>
            <li class="list-group-item"> Unconfirmed Balance : <span class="text-success"><%= info.unconfirmed_balance %> BTC</span></li>
            <li class="list-group-item"> Total Received : <span class="text-success"><%= info.total_received %> BTC</span></li>
            <li class="list-group-item"> Total Sent : <span class="text-success"><%= info.total_sent %> BTC</span></li>
        </ul>
    </div>
    <% } %>
<% } %>
